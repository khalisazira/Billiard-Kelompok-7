{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "D:/SFML/SFML-mingw/bin/g++.exe", // Ganti ini
            "args": [
                "-g", "${workspaceFolder}/*.cpp",
                "-o", "${workspaceFolder}/output/main.exe",
                "-I", "${workspaceFolder}/SFML-2.4.2/include",
                "-L", "${workspaceFolder}/SFML-2.4.2/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PATH": "${workspaceFolder}/SFML-mingw/bin;${workspaceFolder}/SFML-2.4.2/bin;${env:PATH}"
                }
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}